{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "respace",
  "title": "Respace",
  "description": "Open apps, files, folders, URLs, and terminal commands in organized workspace bundles",
  "icon": "extension.png",
  "author": "royal-lobster",
  "categories": ["Productivity", "Developer Tools"],
  "license": "MIT",
  "commands": [
    {
      "name": "open-workspace",
      "title": "Open Workspace",
      "description": "Browse and open workspace bundles",
      "subtitle": "Respace",
      "mode": "view"
    },
    {
      "name": "quick-open",
      "title": "Quick Open Workspace",
      "description": "Quickly open a workspace by name",
      "subtitle": "Respace",
      "mode": "no-view",
      "arguments": [
        {
          "name": "workspaceName",
          "placeholder": "Workspace Name",
          "type": "text",
          "required": true
        }
      ]
    },
    {
      "name": "manage-workspaces",
      "title": "Manage Workspaces",
      "description": "Create, edit, and delete workspaces",
      "subtitle": "Respace",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.65.0",
    "@raycast/utils": "^1.12.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "20.8.10",
    "@types/react": "^19.0.0",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "publish": "npx @raycast/api@latest publish"
  }
}
